<div class="form content">
    <h1 class="text-center">List of Users</h1>
    <div class="pagination justify-content-center mt-4">
        <%= will_paginate %>
    </div>
        <div class="container text-center">
            <div class="row">
                <% @users.each do |user| %> 
                    <div class="col-3">
                        <%= user_avatar( user,'avatar_size') %> 
                        <div class="container mb-2">
                        <%= link_to user.name, user %>  
                        </div>
                        <% if user.admin? %>
                            <%= link_to "Remove", admin_user_path(user), method: :delete ,class: "btn btn-primary mb-3"%>
                        <% else %>
                            <%= link_to "Add", admin_user_path(user), method: :patch ,class:"btn btn-secondary mb-3"%>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    <div class="pagination justify-content-center mt-4">
        <%= will_paginate %>
    </div>
</div>


