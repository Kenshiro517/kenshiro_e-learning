<div class="col-8 m-auto text-center">
    <h1>Administrate Words</h1>
    <div class="pagination justify-content-center mt-4">
        <%= will_paginate %>
    </div>
    <div class="row">
        <div class="col-6">
            <h2><%= @category.title %></h2>
            <h5><%= @category.description %></h5>
        </div>
        <div class="col-6">
            <%= link_to "Create word", new_admin_category_word_path, class: "btn btn-primary" %>
         </div>
    </div>
    <div class="row">
    <% if @words.any? %>
        <table class="table mt-4">
            <thead>
            <tr>
                <th scope="col">Word</th>
                <th scope="col">Answer</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @words.each do |word|%>
                <tr>
                    <td><%= word.content %></td>
                    <td><%= word.correct_answer%></td>
                    <td>
                        <%= link_to "Edit", edit_admin_category_word_path(@category,word),class:"btn btn-outline-primary btn-block"%>
                        <%= link_to "Delete",admin_category_word_path(@category,word),method: :delete, data: {confirm: "Are you sure to delete word?"}, class:"btn btn-outline-secondary btn-block"%>
                    </td>
                </tr>
            <% end %>
        </tbody>
        </table>
    <%else%>
        <h3 class="mx-auto">There is no word</h3>
    <%end%>
    </div>
     <div class="pagination justify-content-center mt-4">
        <%= will_paginate %>
    </div>
    
    <%= link_to "Back",admin_categories_path,class:"btn btn-outline-secondary px-5 mb-4"%>
</div>





