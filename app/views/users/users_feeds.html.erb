<div class="container pt-4">
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                User info 
                </div>
                <div class="card-body">
                    <%= user_avatar(current_user,'avatar_size') %>
                    <h5 class="card-title"><%= current_user.name %></h5>
                    <p class="card-text mb-6"> <%= current_user.email %></p>
                    <div class="stats mt-2">
                        <strong id="following" class="stat">
                            <%= current_user.followings.count %>
                        </strong>
                        following
                        <strong id="followers" class="stat  ml-2">
                            <%= current_user.followers.count %>
                        </strong>
                        followers
                    </div>
                    <p>learned words:<strong><%= link_to current_user.answers.count, words_path %></strong></p>
                </div>
            </div>
        </div>
        <div class="col-8">
             <div class="card">
                <div class="card-header">
                    Activity feed
                </div>
                <div class="card-body">
                    <h5 class="card-title">Nothing to show</h5>
                </div>
            </div>
        </div>
    </div>
</div>