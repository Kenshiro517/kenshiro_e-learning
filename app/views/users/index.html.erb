<div class="form content">
    <h1 class="text-center">List of Users</h1>
    <div class="pagination justify-content-center mt-4">
        <%= will_paginate %>
    </div>
        <div class="container">
            <div class="row">
                <% @users.each do |user| %> 
                    <div class="col-6">
                        <%= user_avatar( user,'avatar_size') %> 
                        <%= link_to user.name, user %>  
                    </div>
                <% end %>
            </div>
        </div>
    <div class="pagination justify-content-center mt-4">
        <%= will_paginate %>
    </div>
</div>



   